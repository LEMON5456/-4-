#include <stdio.h>
2	
3	int main() {
4	    int blue_balls[5];  // Массив на 5 элементов
5	    int size = sizeof(blue_balls) / sizeof(blue_balls[0]);  // Размер = 5
6	    
7	    // Заполняем массив (например, числами 1, 2, 3, 4, 5)
8	    for (int i = 0; i < size; i++) {
9	        blue_balls[i] = (i + 1);  // 1, 2, 3, 4, 5
10	    }
11	    
12	    printf("В коробке blue_balls помещается %d шариков.\n", size);
13	    printf("Сейчас в ней лежит %d шариков:\n", size);
14	    
15	    // Выводим все элементы
16	    for (int i = 0; i < size; i++) {
17	        printf("Шарик %d: %d\n", i + 1, blue_balls[i]);
18	    }
19	    
20	    return 0;
21	}
